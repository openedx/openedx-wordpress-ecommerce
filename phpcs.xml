<?xml version="1.0"?>
<ruleset name="Coding Style Checks">
    <description>Coding Style Checks.</description>

    <file>.</file>
    <exclude-pattern>./vendor/*</exclude-pattern>

    <arg value="sp"/>
    <arg name="basepath" value="./"/>
    <arg name="colors"/>
    <arg name="extensions" value="php"/>
    <arg name="parallel" value="8"/>

    <rule ref="WordPress">
    </rule>

    <rule ref="Generic.Arrays.DisallowLongArraySyntax">
        <exclude name="Generic.Files.LineEndings.InvalidEOLChar"/>
        <exclude name="WordPress.PHP.YodaConditions.NotYoda"/>
        <exclude name="Squiz.Commenting.FileComment.MissingPackageTag"/>
        <exclude name="Squiz.Commenting.FileComment.Missing"/>
        <exclude name="Generic.Arrays.DisallowLongArraySyntax.Found"/>
        <exclude name="WordPress.Security.NonceVerification.Missing"/>
        <exclude name="WordPress.Security.EscapeOutput.OutputNotEscaped"/>
        <exclude name="WordPress.Security.ValidatedSanitizedInput.MissingUnslash"/>
        <exclude name="Universal.UseStatements.NoLeadingBackslash.LeadingBackslashFound"/>
        <exclude name="WordPress.DB.DirectDatabaseQuery.DirectQuery"/>
        <exclude name="WordPress.WP.I18n.NonSingularStringLiteralContext"/>
    </rule>
</ruleset>